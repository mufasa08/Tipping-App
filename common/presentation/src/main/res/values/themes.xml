<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipJar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SmallTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LargeTextStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="android:fontFamily">roboto-medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SmallTextStyle.Bold" parent="SmallTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextStyle.Bold" parent="MediumTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTextStyle.Bold" parent="LargeTextStyle">
        <item name="android:textStyle">bold</item>
    </style>



    <style name="CompoundButton.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/compound_button_tint</item>
        <item name="android:button">@drawable/ic_checkbox_active</item>
        <item name="android:textAppearance">@style/CompoundButton.TextAppearance</item>
        <item name="android:paddingStart">13dp</item>
    </style>

    <style name="AppMaterialToolbar.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppMaterialToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/AppMaterialToolbar.TextAppearance</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/black</item>
    </style>

</resources>